 #else
 static const char *rpcb_pgmtbl[] = {
 	NULL,
@@ -279,6 +279,9 @@ static int rpc_do_create_client(struct sockaddr *addr, struct conn_info *info, i
 		laddr = (struct sockaddr *) &in4_laddr;
